<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kulikovman.calcus.MainActivity">

    <TextView
        android:id="@+id/textCalculation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10sp"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom|end"
        android:text="@string/calculateExample"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginEnd="10sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|end"
        android:text="@string/textResult"
        android:textColor="#0288D1"
        android:textSize="47sp" />


    <LinearLayout
        android:id="@+id/groupButton1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sinus"
            style="@style/calcButtonBlue"
            android:text="sin" />

        <Button
            android:id="@+id/btn_cosine"
            style="@style/calcButtonBlue"
            android:text="cos" />

        <Button
            android:id="@+id/btn_tangent"
            style="@style/calcButtonBlue"
            android:text="tan" />

        <Button
            android:id="@+id/btn_7"
            style="@style/calcButtonGray"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/calcButtonGray"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/calcButtonGray"
            android:text="9" />

        <Button
            android:id="@+id/btn_reset"
            style="@style/calcButtonBlue"
            android:text="ะก" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/calcButtonBlue"
            android:text="@string/btn_delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_natural_logarithm"
            style="@style/calcButtonBlue"
            android:text="ln" />

        <Button
            android:id="@+id/btn_logarithm"
            style="@style/calcButtonBlue"
            android:text="log" />

        <Button
            android:id="@+id/btn_percent"
            style="@style/calcButtonBlue"
            android:text="@string/btn_percent" />

        <Button
            android:id="@+id/btn_4"
            style="@style/calcButtonGray"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/calcButtonGray"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/calcButtonGray"
            android:text="6" />

        <Button
            android:id="@+id/btn_addition"
            style="@style/calcButtonBlue"
            android:text="@string/btn_addition" />

        <Button
            android:id="@+id/btn_multiplication"
            style="@style/calcButtonBlue"
            android:text="@string/btn_multiplication" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pi"
            style="@style/calcButtonBlue"
            android:text="@string/btn_pi" />

        <Button
            android:id="@+id/btn_e"
            style="@style/calcButtonBlue"
            android:text="@string/btn_e" />

        <Button
            android:id="@+id/btn_power"
            style="@style/calcButtonBlue"
            android:text="@string/btn_power" />

        <Button
            android:id="@+id/btn_1"
            style="@style/calcButtonGray"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/calcButtonGray"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/calcButtonGray"
            android:text="3" />

        <Button
            android:id="@+id/btn_subtraction"
            style="@style/calcButtonBlue"
            android:text="@string/btn_subtraction" />

        <Button
            android:id="@+id/btn_devision"
            style="@style/calcButtonBlue"
            android:text="@string/btn_devision" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_opening_bracket"
            style="@style/calcButtonBlue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_opening_bracket" />

        <Button
            android:id="@+id/btn_closing_bracket"
            style="@style/calcButtonBlue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_closing_bracket" />

        <Button
            android:id="@+id/btn_square_root"
            style="@style/calcButtonBlue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_square_root" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/calcButtonGray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_dot" />

        <Button
            android:id="@+id/btn_0"
            style="@style/calcButtonGray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/btn_000"
            style="@style/calcButtonGray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="000" />

        <Button
            android:id="@+id/btn_calculate"
            style="@style/calcButtonGray"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="@string/btn_calculate" />
    </LinearLayout>

</LinearLayout>
