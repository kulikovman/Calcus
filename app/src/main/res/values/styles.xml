<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="commonTextViewSettings" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:paddingEnd">10sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Базовая часть стилей для кнопок -->
    <style name="commonButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">pressButton</item>
    </style>

    <!-- Основные кнопки - цифры, точка, равно -->
    <style name="mainButtonStyle" parent="commonButtonStyle">
        <item name="android:background">@drawable/main_button_color</item>
        <item name="android:textColor">@drawable/main_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Вспомогательные кнопки - сброс, удаление, операции -->
    <style name="otherButtonStyle" parent="commonButtonStyle">
        <item name="android:background">@drawable/other_button_color</item>
        <item name="android:textColor">@drawable/other_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Кнопки операций с памятью -->
    <style name="memoryButtonStyle" parent="commonButtonStyle">
        <item name="android:background">@drawable/memory_button_color</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
