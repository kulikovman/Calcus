<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kulikovman.calcus.MainActivity">

    <TextView
        android:id="@+id/calculationField"
        style="@style/commonTextViewSettings"
        android:layout_height="35dp"
        android:gravity="bottom|end"
        android:inputType="number"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/resultField"
        style="@style/commonTextViewSettings"
        android:layout_height="80dp"
        android:gravity="center_vertical|end"
        android:inputType="number"
        android:onClick="onClick"
        android:textColor="#0288D1"
        android:textSize="47sp" />

    <LinearLayout
        android:id="@+id/groupButton1"
        style="common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            style="@style/blueButtonStyle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="35sp"
            android:text="@string/reset" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/blueButtonStyle"
            android:layout_weight="3"
            android:text="@string/delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            style="@style/grayButtonStyle"
            android:text="@string/btn_7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/grayButtonStyle"
            android:text="@string/btn_8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/grayButtonStyle"
            android:text="@string/btn_9" />

        <Button
            android:id="@+id/btn_devision"
            style="@style/blueButtonStyle"
            android:text="@string/devision" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/grayButtonStyle"
            android:text="@string/btn_4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/grayButtonStyle"
            android:text="@string/btn_5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/grayButtonStyle"
            android:text="@string/btn_6" />

        <Button
            android:id="@+id/btn_multiplication"
            style="@style/blueButtonStyle"
            android:text="@string/multiplication" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/grayButtonStyle"
            android:text="@string/btn_1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/grayButtonStyle"
            android:text="@string/btn_2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/grayButtonStyle"
            android:text="@string/btn_3" />

        <Button
            android:id="@+id/btn_subtraction"
            style="@style/blueButtonStyle"
            android:text="@string/subtraction" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            style="@style/grayButtonStyle"
            android:text="@string/btn_0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/grayButtonStyle"
            android:text="@string/dot" />

        <Button
            android:id="@+id/btn_calculate"
            style="@style/grayButtonStyle"
            android:text="@string/calculate" />

        <Button
            android:id="@+id/btn_addition"
            style="@style/blueButtonStyle"
            android:text="@string/addition" />
    </LinearLayout>

</LinearLayout>
