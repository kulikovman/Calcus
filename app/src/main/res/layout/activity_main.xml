<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kulikovman.calcus.MainActivity">

    <TextView
        android:id="@+id/textCalculation"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="bottom|end"
        android:layout_marginEnd="10sp"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:text="@string/calculateExample" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical|end"
        android:layout_marginEnd="10sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#0288D1"
        android:textSize="47sp"
        android:onClick="onClick"
        android:text="6758" />


    <LinearLayout
        android:id="@+id/groupButton1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="35sp"
            style="@style/blueButtonStyle"
            android:text="Сброс" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_weight="3"
            style="@style/blueButtonStyle"
            android:text="@string/btn_delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            style="@style/grayButtonStyle"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/grayButtonStyle"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/grayButtonStyle"
            android:text="9" />

        <Button
            android:id="@+id/btn_devision"
            style="@style/blueButtonStyle"
            android:text="@string/btn_devision" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/grayButtonStyle"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/grayButtonStyle"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/grayButtonStyle"
            android:text="6" />

        <Button
            android:id="@+id/btn_multiplication"
            style="@style/blueButtonStyle"
            android:text="@string/btn_multiplication" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/grayButtonStyle"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/grayButtonStyle"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/grayButtonStyle"
            android:text="3" />

        <Button
            android:id="@+id/btn_subtraction"
            style="@style/blueButtonStyle"
            android:text="@string/btn_subtraction" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            style="@style/grayButtonStyle"
            android:text="0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/grayButtonStyle"
            android:text="@string/btn_dot" />

        <Button
            android:id="@+id/btn_calculate"
            style="@style/grayButtonStyle"
            android:text="@string/btn_calculate" />

        <Button
            android:id="@+id/btn_addition"
            style="@style/blueButtonStyle"
            android:text="@string/btn_addition" />
    </LinearLayout>

</LinearLayout>
