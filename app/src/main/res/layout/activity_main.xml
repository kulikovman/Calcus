<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kulikovman.calcus.MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memory_field"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:onClick="onClick"
            android:text="7584"
            android:textColor="@color/gray_7"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/memory_marker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="●"
            android:gravity="center_horizontal"
            android:textColor="@color/red_dot"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_field"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="236541.1256"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|end"
            android:onClick="onClick"
            android:textColor="@color/gray_9"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/operation_field"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="+"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/gray_9"
            android:textSize="40sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/history_field"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:text="56 + 25698"
            android:onClick="onClick"
            android:textColor="@color/gray_5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/history_operation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="="
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@color/gray_5"
            android:textSize="20sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="17dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_MC"
            style="@style/memoryButtonStyle"
            android:text="@string/mc" />

        <Button
            android:id="@+id/btn_MR"
            style="@style/memoryButtonStyle"
            android:text="@string/mr" />

        <Button
            android:id="@+id/btn_M_addition"
            style="@style/memoryButtonStyle"
            android:text="@string/m_add" />

        <Button
            android:id="@+id/btn_M_subtraction"
            style="@style/memoryButtonStyle"
            android:text="@string/m_sub" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            style="@style/otherButtonStyle"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingStart="37dp"
            android:text="@string/reset" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/otherButtonStyle"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:text="@string/delete" />

        <Button
            android:id="@+id/btn_percent"
            style="@style/otherButtonStyle"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:text="@string/percent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            style="@style/mainButtonStyle"
            android:text="@string/btn_7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/mainButtonStyle"
            android:text="@string/btn_8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/mainButtonStyle"
            android:text="@string/btn_9" />

        <Button
            android:id="@+id/btn_division"
            style="@style/otherButtonStyle"
            android:text="@string/division" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/mainButtonStyle"
            android:text="@string/btn_4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/mainButtonStyle"
            android:text="@string/btn_5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/mainButtonStyle"
            android:text="@string/btn_6" />

        <Button
            android:id="@+id/btn_multiplication"
            style="@style/otherButtonStyle"
            android:text="@string/multiplication" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/mainButtonStyle"
            android:text="@string/btn_1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/mainButtonStyle"
            android:text="@string/btn_2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/mainButtonStyle"
            android:text="@string/btn_3" />

        <Button
            android:id="@+id/btn_subtraction"
            style="@style/otherButtonStyle"
            android:text="@string/subtraction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            style="@style/mainButtonStyle"
            android:text="@string/btn_0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/mainButtonStyle"
            android:text="@string/dot" />

        <Button
            android:id="@+id/btn_calculate"
            style="@style/mainButtonStyle"
            android:text="@string/calculate" />

        <Button
            android:id="@+id/btn_addition"
            style="@style/otherButtonStyle"
            android:text="@string/addition" />
    </LinearLayout>

</LinearLayout>
