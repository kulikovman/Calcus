<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kulikovman.calcus.MainActivity">

    <LinearLayout
        android:id="@+id/memoryGroup"
        style="common"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/memoryField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:gravity="bottom|end"
            android:text="254.35"
            android:textColor="#4D4D4D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/memoryMarker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="bottom|center_horizontal"
            android:text="@string/circle"
            android:textColor="#FF0000"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultGroup"
        style="common"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/resultField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|end"
            android:onClick="onClick"
            android:text="123456.78042"
            android:textColor="#333333"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/resultOperation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal"
            android:text="+"
            android:textColor="#333333"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculationGroup"
        style="common"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/calculationField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:gravity="top|end"
            android:text="123.42 + 47842"
            android:textColor="#999999"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/calculationMarker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="top|center"
            android:text="="
            android:textColor="#999999"
            android:textSize="20sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dividerColor" />

    <LinearLayout
        android:id="@+id/groupMemoryButton"
        android:layout_width="match_parent"
        android:layout_height="47sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_MR"
            style="@style/memoryButtonStyle"
            android:text="MR" />

        <Button
            android:id="@+id/btn_MC"
            style="@style/memoryButtonStyle"
            android:text="MC" />

        <Button
            android:id="@+id/btn_M_addition"
            style="@style/memoryButtonStyle"
            android:text="M+" />

        <Button
            android:id="@+id/btn_M_subtraction"
            style="@style/memoryButtonStyle"
            android:text="M-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupDeleteButton"
        style="common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            style="@style/blueButtonPortrait"
            android:layout_weight="2"
            android:layout_width="0sp"
            android:gravity="center_vertical"
            android:paddingStart="35sp"
            android:text="@string/reset" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/blueButtonPortrait"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:text="@string/delete" />

        <Button
            android:id="@+id/btn_percent"
            style="@style/blueButtonLandscape"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:text="@string/percent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_9" />

        <Button
            android:id="@+id/btn_devision"
            style="@style/blueButtonPortrait"
            android:text="@string/devision" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_6" />

        <Button
            android:id="@+id/btn_multiplication"
            style="@style/blueButtonPortrait"
            android:text="@string/multiplication" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_3" />

        <Button
            android:id="@+id/btn_subtraction"
            style="@style/blueButtonPortrait"
            android:text="@string/subtraction" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupButton5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            style="@style/grayButtonPortrait"
            android:text="@string/btn_0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/grayButtonPortrait"
            android:text="@string/dot" />

        <Button
            android:id="@+id/btn_calculate"
            style="@style/grayButtonPortrait"
            android:text="@string/calculate" />

        <Button
            android:id="@+id/btn_addition"
            style="@style/blueButtonPortrait"
            android:text="@string/addition" />
    </LinearLayout>

</LinearLayout>
