<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/other_button_color_pressed">

    <!-- mask will be here... -->
    <item android:id="@android:id/mask">
        <color android:color="@color/black"/> <!-- any color will do -->
    </item>

    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/other_button_color_pressed"/>
                    <stroke
                        android:width="1px"
                        android:color="@color/gray_4"/>
                </shape>
            </item>

            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/other_button_color_pressed"/>
                    <stroke
                        android:width="1px"
                        android:color="@color/gray_4"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/other_button_color"/>
                    <stroke
                        android:width="1px"
                        android:color="@color/gray_4"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>